<!-- src/joint_publisher1.cppを実行するためのファイル-->

<launch>
    <arg name="model" default="$(find gazebo_tutorial)/urdf/simple_body4.urdf"/>
    <arg name="rvizconfig" default="$(find gazebo_tutorial)/rviz/urdf_display.rviz"/>
    <arg name="length0" default="1.0"/>

    <param name="robot_description" command="$(find xacro)/xacro $(arg model) length:=$(arg length0) --inorder"/>

    <node name="joint_publisher1" pkg="gazebo_tutorial" type="joint_publisher"/>

    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"/>
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(arg rvizconfig)" required="true"/>
</launch>