<launch>
  <arg name="model" default="$(find gazebo_tutorial)/urdf/robot_sim.urdf" />
  <arg name="rvizconfig" default="$(find gazebo_tutorial)/rviz/urdf_display.rviz" />
  <arg name="joy" default="false" />
  <param name="robot_description" command="$(find xacro)/xacro $(arg model)"/>

  <group if="$(arg joy)">
    <node name="joy_node"   pkg="joy" type="joy_node" />
    <node name="basic_twist_publisher" pkg="basic_lecture" type="basic_twist_publisher"/>
  </group>

  <node name="robot_sim" pkg="gazebo_tutorial" type="robot_sim"/>

  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(arg rvizconfig)" required="true" />
</launch>