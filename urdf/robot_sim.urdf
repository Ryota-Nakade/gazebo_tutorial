<!-- RVizでオムニホイールロボットのシミュレーションする用-->

<robot name="test_robot">
    <material name="red">
        <color rgba="1.0 0.0 0.0 1.0"/>
    </material>
    <material name="green">
        <color rgba="0.0 1.0 0.0 1.0"/>
    </material>

    <link name="base_link"/>

    <joint name="base_joint" type="fixed">
        <parent link="base_link"/>
        <child link="body1"/>
    </joint>
    <link name="body1">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0.05"/>
            <geometry>
                <cylinder radius="0.15" length="0.10"/>
            </geometry>
            <material name="red"/>
        </visual>
    </link>

    <joint name="joint1" type="fixed">
        <parent link="body1"/>
        <child link="body2"/>
    </joint>

    <link name="body2">
        <visual>
            <origin rpy="0 0 0" xyz="0.1 0 0.12"/>
            <geometry>
                <box size="0.07 0.07 0.07"/>
            </geometry>
            <material name="green"/>
        </visual>
    </link>

</robot>